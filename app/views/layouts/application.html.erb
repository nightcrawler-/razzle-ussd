<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">

<head>
  <title> Razzle USSD </title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <%= render partial: 'shared/head' %>
  
  <%= analytics_init if GoogleAnalytics.valid_tracker? %>

</head>

<% if (1 == 1) %>
<!-- For best perfomance, only use this when logged in -->

<body class="vertical-layout vertical-menu-modern semi-dark-layout 2-columns  navbar-floating footer-static  "
  data-open="click" data-menu="vertical-menu-modern" data-col="2-columns" data-layout="semi-dark-layout">
  <%= render partial: 'shared/header' %>
  <%= render partial: 'shared/menu' %>

  <% else %>

  <body
    class="horizontal-layout horizontal-menu 1-column  navbar-floating footer-static bg-full-screen-image  blank-page blank-page"
    data-open="hover" data-menu="horizontal-menu" data-col="1-column">
    <% end %>

    <!-- BEGIN: Content-->
    <div class="app-content content">
      <div class="content-overlay"></div>
      <div class="header-navbar-shadow"></div>
      <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
          <p class="notice"><%= notice %></p>
          <%= yield %>
        </div>
      </div>
    </div>
    <!-- END: Content-->

    <%= render partial: 'shared/footer' %>
    <%= debug(params) if Rails.env.development? || Rails.env.staging? %>
  </body>

</html>